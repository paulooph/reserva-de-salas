@model reserva_de_salas.Models.Usuario

@{
    ViewData["Title"] = "Detalhes do Usuário";
}

<h1>Detalhes do Usuário</h1>

<div>
    <dl class="row mb-3">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">E-mail</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Administrador?</dt>
        <dd class="col-sm-10">@(@Model.Administrador ? "Sim" : "Não")</dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</p>
