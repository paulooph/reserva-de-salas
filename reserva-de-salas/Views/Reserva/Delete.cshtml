@model reserva_de_salas.Models.Reserva

@{
    ViewData["Title"] = "Excluir Reserva";
}

<h1>Excluir Reserva</h1>

<h3>Tem certeza que deseja excluir esta reserva?</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID:</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Usuário:</dt>
        <dd class="col-sm-10">@Model.Usuario.Email</dd>

        <dt class="col-sm-2">Sala:</dt>
        <dd class="col-sm-10">@Model.Sala.Nome</dd>

        <dt class="col-sm-2">Data:</dt>
        <dd class="col-sm-10">@Model.Data.ToShortDateString()</dd>

        <dt class="col-sm-2">Hora Início:</dt>
        <dd class="col-sm-10">@Model.HoraInicio.ToString("hh\\:mm")</dd>

        <dt class="col-sm-2">Hora Fim:</dt>
        <dd class="col-sm-10">@Model.HoraFim.ToString("hh\\:mm")</dd>

        <dt class="col-sm-2">Pessoas:</dt>
        <dd class="col-sm-10">@Model.NumeroDePessoas</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Confirmar Exclusão</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
