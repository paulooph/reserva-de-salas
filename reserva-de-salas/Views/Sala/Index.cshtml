@model IEnumerable<reserva_de_salas.Models.Sala>

@{
    ViewData["Title"] = "Lista de Salas";
}

<h1>Lista de Salas</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nova Sala</a>
</p>

<table id="salasTable" class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Capacidade</th>
            <th>Recursos</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Nome</td>
                <td>@item.Capacidade</td>
                <td>@item.Recursos</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalhes</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@* Exemplo para exibir mensagens de sucesso/erro do TempData *@
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success mt-3" role="alert">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger mt-3" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

@section Scripts {
    <script>
        $(document).ready(function () {
          $('#salasTable').DataTable({
            language: {
              url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/pt-BR.json'
            },
            paging:    true,
            searching: true,
            ordering:  true,
            info:      true
          });
        });
    </script>
}
