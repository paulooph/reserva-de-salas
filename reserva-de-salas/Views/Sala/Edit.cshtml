@model reserva_de_salas.Models.Sala

@{
    ViewData["Title"] = "Editar Sala";
}

<h1>Editar Sala</h1>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" /> @* Campo oculto para o Id *@
    <div class="form-group mb-3">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Capacidade" class="control-label"></label>
        <input asp-for="Capacidade" class="form-control" />
        <span asp-validation-for="Capacidade" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Recursos" class="control-label"></label>
        <input asp-for="Recursos" class="form-control" />
        <span asp-validation-for="Recursos" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Salvar Alterações</button>
    <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}